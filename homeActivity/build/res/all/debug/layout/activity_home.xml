<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:weightSum="4.0"
              android:id="@+id/root"
              android:background="@color/Black">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_margin="6dp"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/home_imageButton_one"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:contentDescription="News"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@color/Yellow"
            android:textSize="30dp"
            android:text="News"
            android:textColor="@android:color/transparent"
            android:alpha=".7"/>


        <TextView
            android:id="@+id/newsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="0dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="News"
            android:textSize="30dp"
            android:textColor="@color/Black"
            android:textStyle="bold"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2.0"
        android:layout_marginLeft="6dp"
        android:layout_marginBottom="6dp"
        android:layout_marginRight="6dp"
        >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="6dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/home_imageButton_five"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:contentDescription="Athletics"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/sportsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="0dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Athletics"
                android:textColor="#cccccc"
                android:textSize="30dp"
                android:textStyle="bold"
                android:background="@color/Yellow"
                android:alpha=".6"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/home_imageButton_three"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:contentDescription="Events"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/eventsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="0dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Events"
                android:textColor="#cccccc"
                android:textSize="30dp"
                android:textStyle="bold"
                android:background="@color/Yellow"
                android:alpha=".6"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:weightSum="2.0">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="6dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/home_imageButton_four"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:contentDescription="Map"
                android:scaleType="centerCrop"
                android:src="@drawable/map"
                />

            <TextView
                android:id="@+id/mapText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="0dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Map"
                android:textColor="#cccccc"
                android:textSize="30dp"
                android:textStyle="bold"
                android:background="@color/Yellow"
                android:alpha=".6"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/home_imageButton_two"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:contentDescription="Text a tip"
                android:src="@drawable/tip"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/textText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="0dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Text a Tip"
                android:textColor="#cccccc"
                android:textSize="30dp"
                android:textStyle="bold"
                android:background="@color/Yellow"
                android:alpha=".6"/>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout><!-- From: file:/Users/jjvg/AndroidStudioProjects/HomeActivity/homeActivity/src/main/res/layout/activity_home.xml -->