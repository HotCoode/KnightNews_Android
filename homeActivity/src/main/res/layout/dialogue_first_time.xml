<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/Black_Alpha_at_75">

    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="270dp"
        android:orientation="vertical"
        android:background="@color/Black_Alpha_at_75"
        android:layout_gravity="center"
        >

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:singleLine="true"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/Old_Gold"
            android:text="To Read More..."/>

        <ImageView
            android:id="@+id/helperImage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:layout_gravity="center"
            android:src="@drawable/kntap"/>

        <Button
            android:id="@+id/only_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.75"
            android:layout_gravity="center"
            android:background="@drawable/button_first_time_selector"
            android:textColor="@color/Old_Gold"
            android:textStyle="bold"
            android:text="Next"
            />
    </LinearLayout>

</LinearLayout>